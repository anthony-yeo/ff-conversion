{
  "manifest_version": 3,
  "name": "Measurement Converter",
  "version": "1.0",
  "description": "Convert metric measurements via popup or right-click.",
  "permissions": ["contextMenus", "scripting", "activeTab", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}
